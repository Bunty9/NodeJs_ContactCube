<!doctype html>
<html>
<head>
    <title>ContactCube</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <style>
        body         { padding-top:80px; }
    </style>
</head>
<body>
<div class="container">
    <div class="jumbotron text-center">
        <h2></span>ContactCube</h2>
        <!-- <a href="/api/login" class="btn btn-default"><span class="fa fa-user"></span> Local Login</a>
        <a href="/api/signup" class="btn btn-default"><span class="fa fa-user"></span> Local Signup</a> -->
        <!-- <a href="/api/login" class="btn btn-default"><span class="fa fa-user"></span> Logout</a> -->
        <form action="/api/logout?_method=DELETE" method="POST">
            <button type="submit" class="btn btn-dark">Log Out</button>
        </form>
    </div>
</div>
<div class="container">
    <form action="/api/addnew" method="POST" class="my-4 form-inline">
        <label for="name" class="sr-only">Name</label>
        <input required placeholder="name" type="string" name="name" id="name" class="form-control col mr-2">
        <label for="number" class="sr-only">Number</label>
        <input  placeholder="number" type="string" name="number" id="number" class="form-control col mr-2">
        <button class="btn btn-success" type="submit">Save</button>
    </form>
    <table class="table table-striped table-responsive">
        <thead>
          <tr>
            <th>Name</th>
            <th>Number</th>
          </tr>
        </thead>
        <tbody>
          <% records.forEach(records => { %>
            <tr>
              <td><a href="<%= records.name %>"><%= records.name %></a></td>
              <td><a href="<%= records.number %>"><%= records.number %></a></td>
              <td><a href="/api/"><%= records.number %></a></td>
            </tr>
          <% }) %>
        </tbody>
    </table>
</div>
</body>
</html>